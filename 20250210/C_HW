//C언어 과제_1

#include <stdio.h>

void main()
{
    int result = 0;
    int a = 0;
    int b = 0;
    int c = 0;
    
    scanf("%d", &a);
    scanf("%d", &b);
    scanf("%d", &c);
    
    result = (a + b) * c - (a - b) / c;
    
    if (c != 0)
    printf("result = %d\n", result);
    
    else
    printf("Exception = %d\n", result);
}

//C언어 과제_2
#include <stdio.h>

void main()
{
    int a = 0;
    int f = 0;
    int s = 0;
    int t = 0;
    
    scanf("%d", &a);
    
    f = a / 100;
    s = a / 10 - f * 10;
    t = a - f * 100 - s * 10;
    
    printf("%d, %d, %d", f, s, t);
}
